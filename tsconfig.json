{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
